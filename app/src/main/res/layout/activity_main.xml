<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Restaurant"
            android:contentDescription="Button to add a new restaurant"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button"
            app:icon="@drawable/ic_add"
            app:iconGravity="start"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewRestaurants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Restaurants"
            android:contentDescription="Button to view the list of restaurants"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button"
            app:icon="@drawable/ic_list"
            app:iconGravity="start"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowRestaurantLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Restaurant on Map"
            android:contentDescription="Button to show the restaurant location on a map"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button"
            app:icon="@drawable/ic_map"
            app:iconGravity="start"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearchNearby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Nearby Restaurants"
            android:contentDescription="Button to search for nearby restaurants"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button"
            app:icon="@drawable/ic_search"
            app:iconGravity="start"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:contentDescription="Button to learn about the app and developers"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button"
            app:icon="@drawable/ic_info"
            app:iconGravity="start"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:contentDescription="Button to exit the app"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button"
            app:icon="@drawable/ic_exit"
            app:iconGravity="start"
            app:iconPadding="8dp" />
    </LinearLayout>
</ScrollView>
